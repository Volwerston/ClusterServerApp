
@{
    ViewBag.Title = "AdminPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 15px;">
    <div class="col-sm-8 col-sm-push-2 well">
        <div class="row">
            <div class="col-sm-8 col-sm-push-2">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="max_requests" class="control-label col-sm-2">Maximum requests:</label>
                        <div class="col-sm-10">
                            <input type="number" name="max_requests" class="form-control" value="20" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success col-sm-6 col-sm-push-3" id="save_btn" type="button">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#save_btn").click(function () {

                var requests = $('input[name="max_requests"]').val();

                if (requests <= 0) {
                    alert('Wrong number of requests specified');
                    return;
                }

                $.ajax({
                    method: 'GET',
                    url: '/api/Db/SetConfig?max_requests=' + requests,
                    headers: {
                        Authorization: 'Bearer ' + getCookie('access_token')
                    },
                    success: function (res) {
                        alert("Changes successfully saved");
                    },
                    error: function (res) {
                        alert(res.statusText);
                    }
                });
            });

        });
    </script>
}